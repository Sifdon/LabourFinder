<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/la"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp">
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools:replace="android:values" >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"
            android:orientation="horizontal"
            android:gravity="center"
            xmlns:android="http://schemas.android.com/apk/res/android" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv"
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                android:src="@drawable/ic_action_profilepic"
                android:layout_margin="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1"
                    android:text="Pradeep Kumar"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:fontFamily="monospace"/>

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/tv2"-->
                    <!--android:text="Plumber"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:textSize="18sp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="#000000"-->
                    <!--android:fontFamily="sans-serif-smallcaps"-->
                    <!--/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv2"
                    android:text="New Delhi"
                    android:drawableLeft="@drawable/ic_action_location"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:gravity="left|center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-smallcaps" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tl"
                    android:gravity="center">
                    <TableRow android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv3"
                            android:text="status"
                            android:textColor="#000000"
                            android:layout_margin="5dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-smallcaps"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"/>

                        <RatingBar
                            android:id="@+id/rb"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:layout_marginRight="10dp"
                            android:rating="2.4" />
                    </TableRow>

                    <TableRow>

                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="View"
                            android:id="@+id/but_view"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="#FFF"
                            android:onClick="view_lab_detail"
                            />

                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="Book"
                            android:background="@color/colorPrimary"
                            android:id="@+id/but_book"
                            android:textColor="#FFF"
                            />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>