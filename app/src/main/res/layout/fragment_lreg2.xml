<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blur_wallpaper"
    tools:context="com.rv.labourfinder.labour.LReg2Fragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profession"
            android:textStyle="normal"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/f2_spin1"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:scrollbars="vertical"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layoutMode="opticalBounds"
            android:layout_margin="10dp">

        </android.support.v7.widget.AppCompatSpinner>



        <Switch
            android:id="@+id/f2_sw1"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="Select Availability"
            android:textStyle="normal"
            android:backgroundTint="@color/colorAccent"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <EditText
                android:id="@+id/f2_et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="12"
                android:fontFamily="monospace"
                android:hint="Town"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <EditText
                android:id="@+id/f2_et2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="12"
                android:fontFamily="monospace"
                android:hint="District"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <EditText
                android:id="@+id/f2_et3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="12"
                android:fontFamily="monospace"
                android:hint="State"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button03"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Next"
            android:layout_margin="10dp"/>



    </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>




</FrameLayout>
